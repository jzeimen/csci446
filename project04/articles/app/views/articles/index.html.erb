<h1>Articl.es</h1>
<p>With a name .com hipsters love.</p>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Author</th>
    <th>Edits</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= truncate(strip_tags(article.body), length: 80) %>
    <td><%= article.author %></td>
    <td><%= article.edits %></td>
    <td><%= link_to image_tag('view.png'), article, title: "View #{article.title}" %></td>
    <td><%= link_to image_tag('edit.png'), edit_article_path(article), title: "Edit #{article.title}" %></td>
    <td><%= link_to image_tag('delete.png'), article, confirm: 'Are you sure?', method: :delete, title: "Delete #{article.title}" %></td>
  </tr>
<% end %>
</table>

<br />
<p>
  <%=  pluralize(@articles.length, "article")+"." %>
</p>
<br />
<%= link_to 'New Article', new_article_path %>
