%h1 Listing users
= will_paginate @users
%table
  %tr
    %th Name
    %th Username
    %th Last Login
    %th Number of Games

  - @users.each do |user|
    %tr
      %td= link_to user.full_name , edit_admin_user_path(user)
      %td= user.username
      %td= time_since_last_login user
      %td= user.games.size

%br

= link_to 'New User', new_admin_user_path
