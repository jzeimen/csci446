= form_for [:member, @game] do |f|
  =hidden_field_tag("game[user_id]", current_user.id)
  -if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :rating
    %br/
    = f.radio_button :rating, 'Amazing'
    = label :Amazing, 'Amazing'
    %br/
    = f.radio_button :rating, 'Good'
    = label :Good, 'Good'
    %br/
    = f.radio_button :rating, 'Meh.'
    = label :Meh, 'Meh.'
    %br/
    = f.radio_button :rating, 'Horrible'
    = label :Horrible, 'Horrible'
  .actions
    = f.submit 'Save'
